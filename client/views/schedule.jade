.form-group.text-center
  label(for="timepicker_start") Work Starts at:
  timepicker#timepicker_start.timepicker(data-ng-model="register.starttime", data-ng-change="register.starttimeChanged()" hour-step="1" minute-step="15" show-meridian="ismeridian")

.form-group.text-center
  label(for="timepicker_end") Work Ends at:
  timepicker#timepicker_end.timepicker(data-ng-model="register.endtime", data-ng-change="register.starttimeChanged()" hour-step="1" minute-step="15" show-meridian="ismeridian")

.form-group.center-margin.text-center
  label Which days do you work?
  div
    button.btn.btn-xs.btn-default(data-ng-model="register.dotw.mon", type="button", btn-checkbox, btn-checkbox-true="1", btn-checkbox-false="0") Monday
    button.btn.btn-xs.btn-default(data-ng-model="register.dotw.tue", type="button", btn-checkbox, btn-checkbox-true="1", btn-checkbox-false="0") Tueday
    button.btn.btn-xs.btn-default(data-ng-model="register.dotw.wed", type="button", btn-checkbox, btn-checkbox-true="1", btn-checkbox-false="0") Wednesday
    button.btn.btn-xs.btn-default(data-ng-model="register.dotw.thu", type="button", btn-checkbox, btn-checkbox-true="1", btn-checkbox-false="0") Thursay
    button.btn.btn-xs.btn-default(data-ng-model="register.dotw.fri", type="button", btn-checkbox, btn-checkbox-true="1", btn-checkbox-false="0") Friday
    button.btn.btn-xs.btn-default(data-ng-model="register.dotw.sat", type="button", btn-checkbox, btn-checkbox-true="1", btn-checkbox-false="0") Saturday
    button.btn.btn-xs.btn-default(data-ng-model="register.dotw.sun", type="button", btn-checkbox, btn-checkbox-true="1", btn-checkbox-false="0") Sunday
