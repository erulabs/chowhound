.login.col-md-4.col-md-offset-4(data-ng-show="login.show")
  .panel.panel-warning(data-ng-show="login.error")
    .panel-body {{ login.error }}

  .panel.panel-primary
    .panel-heading Login
    .panel-body.text-center
      form(method="post", action="/api/login", enctype='application/json')
        .form-group
          input(type="text", class="form-control", placeholder="Email", name='username', value="{{login.app.$cookies['x-chow-user']}}")
          input(type="password", class="form-control", placeholder="Password", name='password')
          button.btn.btn-primary(type="submit") Submit
      a(href="#", data-ng-click="login.register()") Sign up
