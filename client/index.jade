doctype html
html(lang="en", data-ng-app="app")
  head
    title Chowhound
    meta(charset="UTF-8")
    link(rel="stylesheet", href=assetURL + 'style.css')
  body
    header
      span Ch
      span.glyphicon.glyphicon-time
      span wH
      span.glyphicon.glyphicon-time
      span und

    .app(data-ng-controller="chowhound")
      .loading(data-ng-show="loading.show")
        span.glyphicon.glyphicon-time

      .login(data-ng-show="login.show")
        .panel.panel-primary
          .panel-heading Login
          .panel-body.text-center
            form(data-ng-submit="login.submit()")
              .form-group
                input(type="text", class="form-control", placeholder="Email", data-ng-model="login.username")
                input(type="password", class="form-control", placeholder="Password", data-ng-model="login.password")
                button.btn.btn-primary(type="submit") Submit
            a(href="#", data-ng-click="login.register()") Sign up

      .register(data-ng-show="register.show")
        .panel.panel-primary
          .panel-heading Register
          .panel-body
            form(data-ng-submit="register.submit()")
              .form-group
                input(type="email", class="form-control", placeholder="Email", data-ng-model="register.username")
                input(type="password", class="form-control", placeholder="Password", data-ng-model="register.password")
                div.
                  Some sort of schedule picker here
                button.btn.btn-primary(type="submit") Sign up
            a(href="#", data-ng-click="register.back()") Back

      .profile(data-ng-show="profile.show").col-md-6.col-md-offset-3
        .panel.panel-primary
          .panel-heading Profile
          .panel-body Login Form

      .graph(data-ng-show="graph.show").col-md-6.col-md-offset-3
        .panel.panel-primary
          .panel-heading Graph
          .panel-body Login Form

      .datatable(data-ng-show="datatable.show").col-md-6.col-md-offset-3
        .panel.panel-primary
          .panel-heading Datatable
          .panel-body Login Form

      .manager(data-ng-show="{{ manager.show }}").col-md-6.col-md-offset-3
        .panel.panel-primary
          .panel-heading Manager
          .panel-body Login Form

    footer
      span Written and created by Seandon Mooy at Rackspace Hosting

    script(type='text/javascript', src=assetURL + 'vendor.js')
    script(type='text/javascript', src=assetURL + 'client.js')
